# EditorConfig for AISG KKD Denetim Sistemi
# https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi,pyx,pxd}]
indent_size = 4
max_line_length = 127

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts,jsx,tsx}]
indent_size = 2

[*.{html,css,scss,less}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

[*.{bat,cmd}]
end_of_line = crlf

[*.{ini,cfg,conf}]
indent_size = 4

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 4

[*.{sql,psql}]
indent_size = 4
