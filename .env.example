# AISG KKD Denetim Sistemi - Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aisg_db
DB_USER=aisg_user
DB_PASSWORD=aisg_password
DATABASE_URL=postgresql://aisg_user:aisg_password@localhost:5432/aisg_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Camera Configuration
CAMERA_SOURCE=0  # 0 for webcam, URL for IP camera
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# AI Model Configuration
MODEL_PATH=models/
HELMET_MODEL=best.pt
PERSON_MODEL=insantespit.pt
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.4

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/aisg.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# File Upload Configuration
UPLOAD_FOLDER=uploads/
MAX_FILE_SIZE=16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,mp4,avi,mov

# Monitoring Configuration
ENABLE_MONITORING=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Configuration
ENABLE_HOT_RELOAD=True
ENABLE_DEBUG_TOOLBAR=False
ENABLE_PROFILING=False

# Production Configuration
ENABLE_HTTPS=False
SSL_CERT_FILE=
SSL_KEY_FILE=
ENABLE_COMPRESSION=True
ENABLE_CACHING=True

# External API Configuration
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here
AZURE_API_KEY=your-azure-api-key-here

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_PUSH_NOTIFICATIONS=False
NOTIFICATION_RECIPIENTS=admin@example.com

# Backup Configuration
BACKUP_ENABLED=False
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Performance Configuration
WORKER_PROCESSES=4
WORKER_THREADS=2
MAX_CONNECTIONS=100
TIMEOUT=30

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=aisg_
CACHE_REDIS_URL=redis://localhost:6379/0
